{
  "scripts": {
    "css:build": "tailwindcss -i ./resources/css/app.css -o ./docs/css/app.css --minify",
    "css:watch": "tailwindcss -i ./resources/css/app.css -o ./docs/css/app.css --watch --minify",
    "js:build": "terser ./resources/js/app.js -o ./docs/js/app.js -c -m",
    "js:watch": "npm run js:build && chokidar \"resources/js/*.js\" -c \"npm run js:build\"",
    "build": "npm run css:build && npm run js:build",
    "watch": "npm-run-all --parallel css:watch js:watch"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.13",
    "chokidar-cli": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.13",
    "terser": "^5.36.0"
  },
  "dependencies": {
    "typewriter-effect": "^2.22.0"
  }
}
